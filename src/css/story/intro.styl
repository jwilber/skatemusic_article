.body_text
	margin 0 auto
	max-width 40rem
	.intro__dek
		font-size 1.5rem
		text-align left
	p, blockquote
		padding-top 0px
		line-height 1.5
		margin 1.5rem 0rem
		font-size 1rem
		font-family 'Atlas Grotesk Web'
	blockquote
		font-size .9rem
		font-weight 500
		background #ececec
		padding 1rem 2rem



.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	&__hed
		max-width 60rem
		margin 0 auto
		padding-top 5rem
		font-weight 300
		text-align center
		set-type-size('xx-large', true)
		+mq('bp-2')
			set-type-size('xxx-large', true)
		+mq('bp-3')
			set-type-size('xxxx-large', true)

	&__byline
		max-width $column-width
		margin 0 auto
		padding-top 5rem
		padding-bottom 1.5rem
		text-align center
		set-type-size('small', true)

	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)
