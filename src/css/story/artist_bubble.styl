a, a:visited, a:active {
  color: #444;
}
p {
  font-family: "Gill Sans", "Helvetica Neue";
  font-size: 16px;
}

h1 {
  font-family: "Gill Sans", "League Gothic";
  font-size: 30px;
}

h2 {
  font-family: "Gill Sans", "museo sans";
  font-size: 25px;
}

.container {
  max-width: 1200px;
  margin: auto;
  font-size: 12px;
}

.lead {
  margin-bottom: 20px;
  font-size: 22px;
  font-weight: 300;
  line-height: 1.4;
  font-family: "Gill Sans", "Helvetica Neue"
}

.chart {
  margin: 40px;
  width: 1000px;
}

.bubble-label {
  font-size: 6px;
  /*font-weight: bold;*/
  text-align: center;
  font-family: Gill Sans
}

.legend {
  padding-bottom: 7px;
}

.legend_item {
  display: inline-block;
  padding-right: 10px;
  margin-bottom: 2px;
}

.legend_item_icon, .legend_item_text {
  display: inline-block;
  vertical-align: middle;
}

.legend_item_icon {
  margin-right: 5px;
  height: 10px;
  width: 10px;
}

svg {
    display: block;
    margin: 0 auto;
}

.button {
  min-width: 150px;
  padding: 4px 5px;
  cursor: pointer;
  text-align: center;
  font-size: 15px;
  border: 1px solid #e0e0e0;
  text-decoration: none;
}

.button.active {
  background: #000;
  color: #fff;
}

#chart {
  margin-left: auto;
  margin-right: auto;
  width: 620px;
}


#vis {
  width: 1000px;
  height: 640px;
  clear: both;
  margin-bottom: 10px;
}

#toolbar {
  margin-top: 10px;
}

.title {
  font-family: Gill Sans;
  font-size: 35px;
  fill: #aaa;
  cursor: default;
  font-weight: bold;
}


.year {
  font-family: Gill Sans;
  font-size: 35px;
  fill: #aaa;
  cursor: default;
  font-weight: bold;
}
.tooltip {
  font-family: Gill Sans;
	position: absolute;
	top: 100px;
	left: 100px;
  -moz-border-radius:5px;
	border-radius: 1px;
  border: 1px solid #000;
  background: #fff;
	opacity: .9;
  color: black;
	padding: 1px;
	/*width: 300px;*/
	font-size: 12px;
	z-index: 10;
}

.tooltip .title {
  font-family: Gill Sans;
	font-size: 12px;
}

.tooltip .name {
  font-family: Gill Sans;
  font-weight:bold;
  font-size: 13px;
  color: #333;
}

.footer {
  text-align: center;
}

.value {
  font-family: Gill Sans;
  font-size: 13px;
}

.tooltipimage {
  border-radius: 50%;
  float: left;
}

.ttimg {
  float: left;
}

.tttext {
  float: right;
  margin-left: 15px;
  margin-right: 8px;
}
